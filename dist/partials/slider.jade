.slider(ng-controller="MainCtrl")
	.container
		.row.uploadbar
			h2.text-center Photo Uploader
			.col-md-8.col-md-offset-2
				.progress(style="border 1px solid gray")
					.progress__bar(role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" id="uploader" style="background-color:blue; height: 30px; width: 0") {{percentage}} % Complete
				.text-center
					button.btn.btn-succes(ngf-select="selectFile($files)" accept="image/jpeg") Choose File
					button.btn.btn-succes Go to Gallery
		.row
			h3 Files:

			.messages(ng-show="displayMsg") {{msg}}
			.row(ng-repeat="file in fileList")
				.col-3 
					img(ngf-thumbnail="file || '/thumb.jpg'" style="width:100%" )
				.col-3 {{file.name}}
				.col-3 {{file.size/1000 | number:2}}KB
				.row
					.col-3
						input(type="text" name="tags" placeholder="Add Tags Here..." ng-model="tags.name")
					.col-3
						button.btn(ng-click="uploadFile(file)") Upload
						button.btn(ng-click="removeFile(file)") Remove


